<%= form_for(@exercise_detail, :url => exercise_detail_path(@exercise_detail, :date => @date), :method => :put) do |f| %>
  <% if @exercise_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@exercise_detail.errors.count, "error") %> prohibited this exercise_detail from being saved:</h2>

      <ul>
      <% @exercise_detail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group"> 
    <%= f.label :sets, :class => "control-label" %>
    <div class="controls">
      <%= f.number_field :sets %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :reps %>
    <div class="controls">
      <%= f.number_field :reps %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :weight %>
    <div class="controls">
      <%= f.number_field :weight %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">  
      <%= f.submit "Save", :class => "btn btn-primary" %>
      <%= link_to 'Cancel', workout_tracker_url, :class => "btn" %>
    </div>
  </div>
<% end %>
